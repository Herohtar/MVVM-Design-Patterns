<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>ReactiveComponentModel</PackageId>
    <Version>0.9.0</Version>
    <Authors>Herohtar</Authors>
    <Description>An implementation of several System.ComponentModel interfaces designed to work with MVVM and System.Reactive</Description>
    <Copyright>Copyright Â© 2019 Herohtar</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageTags>MVVM;Reactive;ComponentModel;</PackageTags>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <RepositoryUrl>https://github.com/Herohtar/ReactiveComponentModel</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Include="LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Reactive" Version="4.1.6" />
  </ItemGroup>

</Project>
